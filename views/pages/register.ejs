<!DOCTYPE html>
<html lang="it">

<%- include('../partials/header') %>

<body>
  <%- include('../partials/navbar') %>

  <main>
    <section class="register-section pb-5">
      <div class="container">
        <div class="row justify-content-center mt-5">
          <div class="col-md-9 col-lg-7">
            <div class="card shadow auth-card mx-auto">
              <div class="card-body px-5">
                <div class="text-center mb-3">
                  <img src="/images/logo-blu.webp" alt="NutriPlan Logo" class="img-fluid" style="height: 55px;">
                </div>
                <h2 class="text-center mb-4">Registrati a NutriPlan</h2>

                <% if (typeof error !== 'undefined') { %>
                  <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
                  </div>
                <% } %>

                <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                  <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> Si sono verificati i seguenti errori:
                    <ul class="mb-0 mt-2">
                      <% errors.forEach(err => { %>
                        <li><%= err.msg || 'Campo non valido: ' + err.param %></li>
                      <% }); %>
                    </ul>
                  </div>
                <% } %>

                <form id="registerForm" action="/register" method="POST">
                  <div class="row">
                    <div class="col-md-4 mb-3">
                      <label class="form-label">Nome</label>
                      <input type="text" name="nome" class="form-control" placeholder="Nome"
                        value="<%= typeof formData !== 'undefined' ? formData.nome : '' %>">
                    </div>
                    <div class="col-md-4 mb-3">
                      <label class="form-label">Cognome</label>
                      <input type="text" name="cognome" class="form-control" placeholder="Cognome"
                        value="<%= typeof formData !== 'undefined' ? formData.cognome : '' %>">
                    </div>
                    <div class="col-md-4 mb-3">
                      <label class="form-label">Data di nascita</label>
                      <input type="date" name="data_di_nascita" class="form-control" placeholder="01/01/1950"
                        value="<%= typeof formData !== 'undefined' ? formData.data_di_nascita : '' %>">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Email"
                      value="<%= typeof formData !== 'undefined' ? formData.email : '' %>">
                  </div>
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label class="form-label">Password</label>
                      <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="col-md-6 mb-3">
                      <label class="form-label">Conferma Password</label>
                      <input type="password" name="confirmPassword" class="form-control" placeholder="Conferma Password">
                    </div>
                  </div>
                  <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Registrati</button>
                  </div>
                  <div class="text-center">
                    <p>Hai gi√† un account? <a href="/login">Accedi</a></p>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
