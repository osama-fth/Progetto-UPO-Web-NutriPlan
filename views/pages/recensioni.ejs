<!DOCTYPE html>
<html lang="it">

<%- include('../partials/header') %>

  <body>
    <%- include('../partials/navbar') %>

      <main>
        <section class="recensioni pt-4 pb-5">
          <div class="container">
            <h2 class="text-center">Cosa Dicono i Nostri Clienti</h2>

            <div class="row justify-content-center mb-3">
              <div class="col-md-10">
                <div class="filter-container">
                  <div class="text-center">
                    <h5 class="mb-4">Filtra per valutazione:</h5>
                    <div class="d-flex flex-wrap justify-content-center gap-3 mb-3">
                      <a href="/recensioni"
                        class="btn <%= !locals.valutazioneSelezionata ? 'btn-primary' : 'btn-outline-primary' %> px-4">
                        <i class="fas fa-list me-2"></i>Tutte
                      </a>
                      <a href="/recensioni/filtra?valutazione=5"
                        class="btn <%= locals.valutazioneSelezionata == '5' ? 'btn-primary' : 'btn-outline-primary' %> px-3">
                        <i class="fas fa-star me-2"></i>5 stelle
                      </a>
                      <a href="/recensioni/filtra?valutazione=4"
                        class="btn <%= locals.valutazioneSelezionata == '4' ? 'btn-primary' : 'btn-outline-primary' %> px-3">
                        <i class="fas fa-star me-2"></i>4 stelle
                      </a>
                      <a href="/recensioni/filtra?valutazione=3"
                        class="btn <%= locals.valutazioneSelezionata == '3' ? 'btn-primary' : 'btn-outline-primary' %> px-3">
                        <i class="fas fa-star me-2"></i>3 stelle
                      </a>
                      <a href="/recensioni/filtra?valutazione=2"
                        class="btn <%= locals.valutazioneSelezionata == '2' ? 'btn-primary' : 'btn-outline-primary' %> px-3">
                        <i class="fas fa-star me-2"></i>2 stelle
                      </a>
                      <a href="/recensioni/filtra?valutazione=1"
                        class="btn <%= locals.valutazioneSelezionata == '1' ? 'btn-primary' : 'btn-outline-primary' %> px-3">
                        <i class="fas fa-star me-2"></i>1 stella
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <% if (locals.recensioni && recensioni.length> 0) { %>
              <div class="row">
                <% recensioni.forEach(function(recensione) { %>
                  <div class="col-md-6 mb-4">
                    <div class="recensioni-card h-100 position-relative">

                      <div class="recensioni-quote">
                        <i class="fas fa-quote-right fa-2x"></i>
                      </div>

                      <div class="recensioni-header">

                        <div class="recensioni-avatar">
                          <i class="fas fa-user"></i>
                        </div>

                        <div class="recensioni-info">
                          <h5 class="mb-1">
                            <%= recensione.nome %>
                          </h5>
                          <div>
                            <% for(let i=1; i <=5; i++) { %>
                              <i
                                class="fas fa-star <%= i <= recensione.valutazione ? 'text-warning' : 'text-secondary opacity-25' %>"></i>
                              <% } %>
                          </div>
                        </div>
                      </div>

                      <div class="recensioni-content">
                        <p class="recensioni-text">"<%= recensione.commento %>"</p>
                      </div>

                      <div class="recensioni-gradient"></div>
                    </div>
                  </div>
                  <% }); %>
              </div>
              <% } else { %>
                <div class="row justify-content-center">
                  <div class="col-md-8">
                    <div class="no-reviews-card">
                      <div class="no-reviews-icon">
                        <i class="fas fa-comment-slash"></i>
                      </div>
                      <h4 class="no-reviews-title">
                        <% if(locals.valutazioneSelezionata) { %>
                          Nessuna recensione con <%= valutazioneSelezionata %> stelle
                            <% } else { %>
                              Nessuna recensione disponibile
                              <% } %>
                      </h4>
                    </div>
                  </div>
                </div>
                <% } %>
          </div>
        </section>
      </main>

      <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>

</html>
