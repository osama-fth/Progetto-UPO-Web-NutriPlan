<!DOCTYPE html>
<html lang="it">

<%- include('../partials/header') %>

<body>
  <%- include('../partials/navbar') %>

  <main class="mt-5">
    <div class="container">
      <%- include('../partials/alerts') %>
    </div>

    <section class="recensioni pb-5">
      <div class="container">
        <h2 class="text-center mb-5">Cosa Dicono i Nostri Clienti</h2>
        
        <% if (locals.recensioni && recensioni.length > 0) { %>
          <div class="row">
            <% recensioni.forEach(function(recensione) { %>
              <div class="col-md-6 mb-4">
                <div class="recensioni-card h-100">
                  <p class="recensioni-text">"<%= recensione.commento %>"</p>
                  <p class="client-name"><%= recensione.nome %></p>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <p class="text-muted">Nessuna recensione disponibile al momento.</p>
          </div>
        <% } %>
      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
