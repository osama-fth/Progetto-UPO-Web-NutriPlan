<!DOCTYPE html>
<html lang="it">

<%- include('../partials/header') %>

<body>
  <%- include('../partials/navbar') %>

  <main>
    <section class="login-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 col-lg-5">
            <div class="card shadow auth-card mt-5">
              <div class="card-body p-5">
                <div class="text-center mb-3">
                  <img src="/images/logo-blu.webp" alt="NutriPlan Logo" class="img-fluid" style="height: 55px;">
                </div>
                <h2 class="text-center mb-4">Accedi a NutriPlan</h2>
                
                <% if (typeof query !== 'undefined' && query.alert === 'errore') { %>
                  <div class="alert alert-danger" role="alert">
                    <% if (query.errorType === 'non_trovato') { %>
                      <i class="fas fa-exclamation-circle me-2"></i> Nessun utente trovato con questa email.
                    <% } else if (query.errorType === 'password_errata') { %>
                      <i class="fas fa-exclamation-circle me-2"></i> Password non corretta. Riprova.
                    <% } else { %>
                      <i class="fas fa-exclamation-circle me-2"></i> Si Ã¨ verificato un errore durante l'accesso.
                    <% } %>
                  </div>
                <% } %>
                
                <form id="loginForm" action="/login" method="POST">
                  <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Email" required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Password" required>
                  </div>
                  <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Accedi</button>
                  </div>
                  <div class="text-center">
                    <p>Non hai un account? <a href="/register">Registrati</a></p>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
