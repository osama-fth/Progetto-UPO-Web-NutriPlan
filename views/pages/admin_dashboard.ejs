                    data-bs-toggle="collapse" data-bs-target="#dettaglio-inline-collapse-<%= giorno.id %>" 
                    aria-expanded="<%= index === 0 ? 'true' : 'false' %>" aria-controls="dettaglio-inline-collapse-<%= giorno.id %>">
                    <%= giorno.label %>
                  </button>
                </h2>
                <div id="dettaglio-inline-collapse-<%= giorno.id %>" class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" 
                  aria-labelledby="dettaglio-inline-heading-<%= giorno.id %>">
                  <div class="accordion-body">
                    <div class="mb-3">
                      <p class="fw-bold mb-1">Colazione:</p>
                      <p class="border-bottom pb-2"><%= pianoSelezionato.contenuto[giorno.id].colazione || 'Non specificato' %></p>
