<!DOCTYPE html>
<html lang="it">

<%- include('../partials/header') %>

<body>
  <div class="dashboard-container">
    <!-- Sidebar per desktop (visibile solo su schermi md e superiori) -->
    <aside class="sidebar d-none d-md-block" id="sidebar-desktop">
      <div class="sidebar-header">
        <img src="/images/logo.webp" alt="NutriPlan Logo" height="50">
      </div>

      <nav>
        <ul class="sidebar-nav">
          <li class="sidebar-item active">
            <a href="#" class="sidebar-link" data-section="pazienti">
              <i class="fas fa-user"></i>
              <span>Pazienti</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="#" class="sidebar-link" data-section="recensioni">
              <i class="fas fa-star"></i>
              <span>Recensioni</span>
            </a>
          </li>
          <li class="sidebar-item">
            <a href="#" class="sidebar-link" data-section="richieste-contatto">
              <i class="fas fa-envelope"></i>
              <span>Richieste di contatto</span>
            </a>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Sidebar mobile con Offcanvas (visibile solo su dispositivi mobili) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar-mobile" aria-labelledby="sidebarMobileLabel">
      <div class="offcanvas-header">
        <div class="sidebar-header">
          <img src="/images/logo.webp" alt="NutriPlan Logo" height="50">
        </div>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <nav>
          <ul class="sidebar-nav">
            <li class="sidebar-item active">
              <a href="#" class="sidebar-link" data-section="pazienti">
                <i class="fas fa-user"></i>
                <span>Pazienti</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a href="#" class="sidebar-link" data-section="recensioni">
                <i class="fas fa-star"></i>
                <span>Recensioni</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a href="#" class="sidebar-link" data-section="richieste-contatto">
                <i class="fas fa-envelope"></i>
                <span>Richieste di contatto</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Contenuto principale -->
    <main class="main-content">
      <header class="dashboard-header">
        <div class="d-flex align-items-center">
          <button class="btn d-md-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar-mobile"
            aria-controls="sidebar-mobile">
            <i class="fas fa-bars"></i>
          </button>
          <h3 class="m-0">Bentornato</h3>
        </div>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#logoutModal">
          <i class="fas fa-sign-out-alt"></i>
          <span class="d-none d-md-inline-block ms-2">Logout</span>
        </button>
      </header>

      <div class="container-fluid mt-3">
        <%- include('../partials/alerts') %>
      </div>

      <!-- Sezione Pazienti -->
      <div id="sezione-pazienti" class="sezione-contenuto">
        <section class="row mt-4">
          <div class="col-lg-10 mx-auto">
            <div class="card mx-2">
              <header class="card-header bg-white d-flex justify-content-between align-items-center">
                <h4 class="py-1 mb-0">I tuoi pazienti</h4>
              </header>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover align-middle">
                    <thead>
                      <tr>
                        <th scope="col" class="text-center">Cognome</th>
                        <th scope="col" class="text-center">Nome</th>
                        <th scope="col" class="text-center">Data di Nascita</th>
                        <th scope="col" class="text-center">Azioni</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (typeof pazienti !== 'undefined' && pazienti.length > 0) { %>
                        <% pazienti.forEach(paziente => { %>
                          <tr>
                            <td class="text-center"><%= paziente.cognome %></td>
                            <td class="text-center"><%= paziente.nome %></td>
                            <td class="text-center"><%= paziente.data_formattata %></td>
                            <td class="text-center">
                              <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-sm btn-outline-primary me-2"
                                        data-paziente-id="<%= paziente.id %>"
                                        data-paziente-nome="<%= paziente.nome %>"
                                        data-paziente-cognome="<%= paziente.cognome %>"
                                        data-paziente-data-nascita="<%= paziente.data_formattata %>"
                                        data-paziente-email="<%= paziente.email %>">
                                  <i class="fas fa-eye me-1"></i> Dettagli
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-success me-2 btn-piani-paziente"
                                        data-paziente-id="<%= paziente.id %>"
                                        data-paziente-nome="<%= paziente.nome %>"
                                        data-paziente-cognome="<%= paziente.cognome %>">
                                  <i class="fas fa-utensils me-1"></i> Piani
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-elimina="utente" data-item-id="<%= paziente.id %>">
                                  <i class="fas fa-trash me-1"></i> Elimina
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center py-4">
                            <i class="fas fa-user-slash text-muted mb-3" style="font-size: 3rem;"></i>
                            <p class="text-muted mb-0">Nessun paziente trovato</p>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Sezione Recensioni -->
      <div id="sezione-recensioni" class="sezione-contenuto d-none">
        <section class="row mt-4">
          <div class="col-lg-10 mx-auto">
            <div class="card mx-2">
              <header class="card-header bg-white d-flex justify-content-between align-items-center">
                <h4 class="py-1 mb-0">Recensioni dei pazienti</h4>
              </header>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover align-middle">
                    <thead>
                      <tr>
                        <th scope="col" class="text-center">Cognome</th>
                        <th scope="col" class="text-center">Nome</th>
                        <th scope="col" class="text-center">Data</th>
                        <th scope="col" class="text-center">Azioni</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (typeof recensioni !== 'undefined' && recensioni.length > 0) { %>
                        <% recensioni.forEach(recensione => { %>
                          <tr>
                            <td class="text-center"><%= recensione.cognome %></td>
                            <td class="text-center"><%= recensione.nome %></td>
                            <td class="text-center"><%= recensione.dataFormattata %></td>
                            <td class="text-center">
                              <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-sm btn-outline-primary me-2 btn-dettagli-recensione"
                                        data-recensione-id="<%= recensione.id %>"
                                        data-recensione-commento="<%= recensione.commento %>"
                                        data-recensione-nome="<%= recensione.nome %> <%= recensione.cognome %>"
                                        data-recensione-data="<%= recensione.dataFormattata %>">
                                  <i class="fas fa-eye me-1"></i> Dettagli
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        data-elimina="recensione" data-item-id="<%= recensione.id %>">
                                  <i class="fas fa-trash me-1"></i> Elimina
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center py-4">
                            <i class="fas fa-star text-muted mb-3" style="font-size: 3rem;"></i>
                            <p class="text-muted mb-0">Nessuna recensione trovata</p>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Sezione Richieste di Contatto -->
      <div id="sezione-richieste-contatto" class="sezione-contenuto d-none">
        <section class="row mt-4">
          <div class="col-lg-10 mx-auto">
            <div class="card mx-2">
              <header class="card-header bg-white d-flex justify-content-between align-items-center">
                <h4 class="py-1 mb-0">Richieste di contatto</h4>
              </header>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover align-middle">
                    <thead>
                      <tr>
                        <th scope="col" class="text-center">Nome</th>
                        <th scope="col" class="text-center">Email</th>
                        <th scope="col" class="text-center">Data</th>
                        <th scope="col" class="text-center">Azioni</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (typeof richieste !== 'undefined' && richieste.length > 0) { %>
                        <% richieste.forEach(richiesta => { %>
                          <tr>
                            <td class="text-center"><%= richiesta.nome %></td>
                            <td class="text-center"><%= richiesta.email %></td>
                            <td class="text-center"><%= richiesta.dataFormattata %></td>
                            <td class="text-center">
                              <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-sm btn-outline-primary me-2 btn-dettagli-richiesta"
                                        data-richiesta-id="<%= richiesta.id %>"
                                        data-richiesta-nome="<%= richiesta.nome %>"
                                        data-richiesta-email="<%= richiesta.email %>"
                                        data-richiesta-messaggio="<%= richiesta.messaggio %>"
                                        data-richiesta-data="<%= richiesta.dataFormattata %>">
                                  <i class="fas fa-eye me-1"></i> Dettagli
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-elimina="richiesta" data-item-id="<%= richiesta.id %>">
                                  <i class="fas fa-trash me-1"></i> Elimina
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center py-4">
                            <i class="fas fa-envelope text-muted mb-3" style="font-size: 3rem;"></i>
                            <p class="text-muted mb-0">Nessuna richiesta di contatto trovata</p>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>
  </div>

  <!-- Modal dettagli paziente-->
  <div class="modal fade" id="pazienteDetailsModal" tabindex="-1" aria-labelledby="pazienteDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pazienteDetailsModalLabel">Dettagli Paziente</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Informazioni paziente -->
        <div class="card mb-4">
          <div class="card-header bg-white">
            <h6 class="mb-0">Informazioni personali</h6>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-3 mb-2">
                <label class="form-label text-muted">Nome</label>
                <p class="fs-5" id="paziente-nome"></p>
              </div>
              <div class="col-md-3 mb-2">
                <label class="form-label text-muted">Cognome</label>
                <p class="fs-5" id="paziente-cognome"></p>
              </div>
              <div class="col-md-3 mb-2">
                <label class="form-label text-muted">Data di nascita</label>
                <p class="fs-5" id="paziente-data-nascita"></p>
              </div>
              <div class="col-md-3 mb-2">
                <label class="form-label text-muted">Email</label>
                <p class="fs-5" id="paziente-email"></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Grafico misurazioni -->
        <div class="card mb-4">
          <div class="card-header bg-white">
            <h6 class="mb-0">Andamento peso</h6>
          </div>
          <div class="card-body">
            <div class="chart-scroll-container">
              <div class="chart-inner-container">
                <div class="chart-container" style="position: relative; height: 300px;">
                  <canvas id="pazienteChart"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
      </div>
    </div>
  </div>
</div>


<!-- Modal dettagli recensione -->
  <div class="modal fade" id="recensioneDetailsModal" tabindex="-1" aria-labelledby="recensioneDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="recensioneDetailsModalLabel">Dettagli Recensione</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><strong>Paziente:</strong> <span id="recensione-paziente"></span></p>
        <p><strong>Data:</strong> <span id="recensione-data"></span></p>
        <div class="mb-3">
          <label class="form-label">Commento:</label>
          <div class="border p-3 rounded bg-light" id="recensione-commento"></div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
      </div>
    </div>
  </div>
</div>

<!-- Model dettagli richiesta di contatto -->
  <div class="modal fade" id="richiestaDetailsModal" tabindex="-1" aria-labelledby="richiestaDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="richiestaDetailsModalLabel">Dettagli Richiesta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><strong>Nome:</strong> <span id="richiesta-nome"></span></p>
        <p><strong>Email:</strong> <span id="richiesta-email"></span></p>
        <p><strong>Data:</strong> <span id="richiesta-data"></span></p>
        <div class="mb-3">
          <label class="form-label">Messaggio:</label>
          <div class="border p-3 rounded bg-light" id="richiesta-messaggio"></div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal piani alimentari paziente -->
<div class="modal fade" id="pianiAlimentariModal" tabindex="-1" aria-labelledby="pianiAlimentariModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pianiAlimentariModalLabel">Piani Alimentari - <span id="piani-paziente-nome"></span></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex justify-content-end mb-3">
          <button type="button" id="btn-nuovo-piano" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Nuovo Piano Alimentare
          </button>
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th scope="col" class="text-center">Titolo</th>
                <th scope="col" class="text-center">Data</th>
                <th scope="col" class="text-center">Azioni</th>
              </tr>
            </thead>
            <tbody id="piani-alimentari-table-body">
              <!-- I piani verranno caricati dinamicamente qui -->
              <tr id="no-piani-row">
                <td colspan="3" class="text-center py-4">
                  <i class="fas fa-utensils text-muted mb-3 icon-3x"></i>
                  <p class="text-muted mb-0">Nessun piano alimentare disponibile</p>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal nuovo piano alimentare -->
<div class="modal fade" id="nuovoPianoModal" tabindex="-1" aria-labelledby="nuovoPianoModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="nuovoPianoModalLabel">Nuovo Piano Alimentare</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="nuovoPianoForm">
          <input type="hidden" id="piano-utente-id" name="utenteId">
          
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="piano-titolo" class="form-label">Titolo</label>
              <input type="text" class="form-control" id="piano-titolo" name="titolo" required>
            </div>
            <div class="col-md-6">
              <label for="piano-data" class="form-label">Data</label>
              <input type="date" class="form-control" id="piano-data" name="data" required>
            </div>
          </div>
          
          <div class="mb-3">
            <label for="piano-descrizione" class="form-label">Descrizione</label>
            <textarea class="form-control" id="piano-descrizione" name="descrizione" rows="2"></textarea>
          </div>
          
          <hr class="my-4">
          
          <!-- Giorni della settimana -->
          <div class="accordion" id="pianoDieteticoAccordion">
            <% const giorni = ['Lunedì', 'Martedì', 'Mercoledì', 'Giovedì', 'Venerdì', 'Sabato', 'Domenica']; %>
            <% giorni.forEach((giorno, index) => { %>
              <div class="accordion-item">
                <h2 class="accordion-header" id="heading<%= giorno %>">
                  <button class="accordion-button <%= index > 0 ? 'collapsed' : '' %>" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#collapse<%= giorno %>" aria-expanded="<%= index === 0 ? 'true' : 'false' %>" aria-controls="collapse<%= giorno %>">
                    <%= giorno %>
                  </button>
                </h2>
                <div id="collapse<%= giorno %>" class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" 
                  aria-labelledby="heading<%= giorno %>" data-bs-parent="#pianoDieteticoAccordion">
                  <div class="accordion-body">
                    <div class="mb-3">
                      <label class="form-label">Colazione</label>
                      <textarea class="form-control" name="<%= giorno.toLowerCase() %>_colazione" rows="2"></textarea>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Pranzo</label>
                      <textarea class="form-control" name="<%= giorno.toLowerCase() %>_pranzo" rows="2"></textarea>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Cena</label>
                      <textarea class="form-control" name="<%= giorno.toLowerCase() %>_cena" rows="2"></textarea>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
        <button type="button" class="btn btn-primary" id="salva-piano-btn">Salva Piano Alimentare</button>
      </div>
    </div>
  </div>
</div>
  
  <%- include('../partials/logout-modal') %>
  <%- include('../partials/visualizza-piano-modal', { isAdmin: true }) %>
  <%- include('../partials/conferma-eliminazione-modal') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/javascripts/peso-chart.js"></script>
  <script src="/javascripts/conferma-eliminazione.js"></script>
  <script src="/javascripts/admin_dashboard.js"></script>
</body>
</html>
