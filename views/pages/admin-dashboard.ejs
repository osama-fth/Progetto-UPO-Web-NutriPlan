                              name="<%= giorno.toLowerCase() %>_pranzo" rows="2"></textarea>
                          </div>
                          <div class="mb-3">
                            <label for="<%= giorno.toLowerCase() %>_cena" class="form-label">Cena</label>
                            <textarea class="form-control" id="<%= giorno.toLowerCase() %>_cena"
                              name="<%= giorno.toLowerCase() %>_cena" rows="2"></textarea>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% }); %>
              </div>
            </form>
          </div>
